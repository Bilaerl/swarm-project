<robot name="my_robot">
    <!-- to specify colours -->
    <material name="orange">
        <color rgba="1 0.5 0 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- links -->
    <!-- base link is a dummy link to serve as the root of the robot -->
    <!-- this is because a root link should not have inertial properties-->
    <link name="base_link" />

    <link name="chassis">
        <visual>
            <geometry>
                <box size="1 0.5 0.1"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <box size="1 0.5 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.22" ixy="0" ixz="0" iyy="0.84" iyz="0" izz="1.04"/>
        </inertial>
    </link>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.3"/>
            </geometry>
            <origin rpy="-1.57075 0 0" xyz="0 -0.3 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.3"/>
            </geometry>
            <origin rpy="-1.57075 0 0" xyz="0 -0.3 0"/>
        </collision>
        <inertial>
            <mass value="4"/>
            <inertia ixx="0.09" ixy="0" ixz="0" iyy="0.09" iyz="0" izz="0.18"/> 
        </inertial>
    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.3"/>
            </geometry>
            <origin rpy="1.57075 0 0" xyz="0 0.3 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.1" radius="0.3"/>
            </geometry>
            <origin rpy="1.57075 0 0" xyz="0 0.3 0"/>
        </collision>
        <inertial>
            <mass value="4"/>
            <inertia ixx="0.09" ixy="0" ixz="0" iyy="0.09" iyz="0" izz="0.18"/>
        </inertial>
    </link>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.125"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.125"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>
    
    <!-- joints -->
    <joint name="chassis_to_base_link" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>

    <joint name="left_wheel_to_chassis" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="-0.2 0 0"/>
    </joint>

    <joint name="right_wheel_to_chassis" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="-0.2 0 0"/>
    </joint>

    <joint name="caster_wheel_to_chassis" type="continuous">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <axis xyz="0 1 0"/>   
        <origin rpy="0 0 0" xyz="0.35 0 -0.175"/>
    </joint>

    <gazebo>
        <!--diff drive plugin-->
        <plugin
            filename="gz-sim-diff-drive-system"
            name="gz::sim::systems::DiffDrive">
            <left_joint>left_wheel_to_chassis</left_joint>
            <right_joint>right_wheel_to_chassis</right_joint>
            <wheel_separation>0.6</wheel_separation>
            <wheel_radius>0.3</wheel_radius>
            <odom_publish_frequency>5</odom_publish_frequency>
            <topic>cmd_vel</topic>
        </plugin>
    </gazebo>
</robot>